<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <TextView
        android:id="@+id/productNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product name"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        style="@style/TextAppearance.AppCompat.Title" />

    <TextView
        android:id="@+id/prizeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productNameTv"
        android:layout_alignParentStart="true"
        android:paddingTop="5dp"
        android:text="0.00 zÅ‚" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="4dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/removeBnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_remove_white"
            android:background="?selectableItemBackgroundBorderless"
            app:tint="@color/material_on_background_emphasis_high_type"/>

        <TextView
            android:id="@+id/countTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/removeBnt"
            android:text="0"
            style="@style/TextAppearance.AppCompat.Title"/>

        <ImageButton
            android:id="@+id/addBnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/countTv"
            android:src="@drawable/ic_add_white"
            android:background="?selectableItemBackgroundBorderless"
            app:tint="@color/material_on_background_emphasis_high_type"/>

    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_below="@id/prizeTv"
        android:layout_marginTop="8dp"/>

</RelativeLayout>