<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <TextView
        android:id="@+id/productTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product name"
        android:layout_alignParentTop="true"
        style="@style/TextAppearance.AppCompat.Title" />

    <TextView
        android:id="@+id/prizeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:layout_below="@+id/productTv"
        android:layout_alignParentStart="true"
        android:text="0.00 zÅ‚" />

    <ImageButton
        android:id="@+id/buyIb"
        android:layout_width="@dimen/m_icon_button_image_size"
        android:layout_height="@dimen/m_icon_button_image_size"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_add_schopping_cart_white"
        android:contentDescription="Add product"
        android:background="?selectableItemBackgroundBorderless"
        app:tint="@color/material_on_background_emphasis_high_type" />


    <View
        android:id="@+id/productDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_below="@+id/prizeTv"
        android:layout_marginTop="8dp"/>

</RelativeLayout>